    <% if (locals.error) { %>
        <div class="error-message">
          <%= error %>
        </div>
      <% } %>

    <form action="/validate-otp/<%= user._id %>" method="post" id="validate-otp" novalidate>
        <!-- Page 1 -->
        <div class="form-card" id="page-1">
            <a href="/" class="back-btn2">
                <i class="fa-solid fa-arrow-left"></i>   Go Back
            </a>
            <p>ðŸ‘‹ Welcome,</p>
            <h2>Verify Phone Number</h2>
            <p>
